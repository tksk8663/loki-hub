{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --watch --no-clear-screen main.ts",
    "prd": "deno run --allow-net --allow-read --allow-write=user.json,pages/dice/data.json,logs main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "watch": {
    "paths": ["main.ts", "load-config.ts", "logger.ts", "error.ts", "pages", "public"],
    "extensions": ["ts", "js", "css", "html"]
  }
}
